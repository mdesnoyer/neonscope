{
    "manifest_version": 2,
    "name": "neonscope",
    "version": "2.0",
    "description": "Show the Neon served images on any web page",
    "browser_action": {
        "default_title": "Neonscope",
        "default_icon": "img/icon-off.png"
    },
    "background": {
        "scripts": ["js/event.js"],
        "persistent": false
    },
    "permissions": [
        "<all_urls>",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "js/lib/jquery-2.1.4.min.js"
            ]
        }
    ]
}
